<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>URl Shortner</h1>
   <%if(locals.id)
    {%>
        <p>URL Genrated : http://localhost:8000/url/<%=id%></p>
    <%}%>
    <form method="Post" action="/url">
        <label>Enter your orginal url</label>
        <input type="text" placeholder="https//example.com" name="url">
        <button type="submit">submit</button>
    </form>
    <h1>URl Shortner</h1>
    <% if(locals.urls){ %>
        <table>
            <thead>
                <th>s.no</th>
                <th>shortId</th>
                <th>redirect</th>
                <th>clicks</th>
                <th>user</th>
            </thead>
        
        <tbody>
            
            <% urls.forEach((url,index) => {%>
                <tr>
                <td><%= index + 1 %></td>
                <td><%= url.shortId %></td>
                <td><%= url.redirectUrl%></td>
                <td><%= url.visitHistory.length%></td>
                <td><%= url.createdBy.email %> </td>
            </tr>
                <% })%>
            
        </tbody>
    </table>
         <%}%>

</body>
</html>
